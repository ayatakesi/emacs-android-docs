#. type: Plain text
#: emacs-30/admin/notes/java_editable:489
#, no-wrap
msgid "  Activity activity;\n"
msgstr ""

#. type: Plain text
#: emacs-30/admin/notes/java_editable:491
#, no-wrap
msgid "  activity.onCreate (...);\n"
msgstr ""

#. type: Plain text
#: emacs-30/admin/notes/java_editable:495
